@model List<Product>
@{
    ViewData["Title"] = "Index";
}


<div class="table pt-3">
    <div>
        <a asp-action="Create" class="btn btn-success btn-rounded btn-fw">Create</a>
    </div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>Image</th>
                <th>
                    Name
                </th>
                <th>Price</th>
                <th>Offer</th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
            }
            @foreach (Product product in Model)
            {
                <tr>
                    <td>
                        @(++count)
                    </td>
                    <td><img src="~/assets/images/@product.ProductImages.FirstOrDefault().Path" /></td>

                    <td>
                        @product.Name
                    </td>
                    <td>@product.Price</td>
                    <td>@product.Offer</td>
                    <td>
                        <div>
                            <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-rounded btn-fw">Update</a>
                            <a id="deleteslider" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-rounded btn-fw">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


