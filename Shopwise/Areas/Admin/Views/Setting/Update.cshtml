@using Shopwise.Areas.Admin.ViewModels.OfferSectionVMs;
@model Setting
@{
    ViewData["Title"] = "Create";
}

<div>
    <h2>
        Create offer section
    </h2>
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="alert alert-danger"></div>

        <div>
            <label asp-for="@Model.Key"></label>
            <input asp-for="@Model.Key" class="form-control" />
            <div>
                <span asp-validation-for="@Model.Key">
                </span>
            </div>
        </div>
        <div>
            <label asp-for="@Model.Value"></label>
            <input asp-for="@Model.Value" class="form-control" />
            <div>
                <span asp-validation-for="@Model.Value  ">
                </span>
            </div>
        </div>

        <div class="mt-2">
            <button type="submit" class="btn btn-outline-success">
                Create
            </button>
        </div>
    </form>
</div>

